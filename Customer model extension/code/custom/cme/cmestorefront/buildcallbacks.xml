	<!-- 
		Called whenever 'ant ear' is used. this callback can be used to modify the content of the ear file

		${ear.path}: 			path to ear
	 -->
	<macrodef name="cmestorefront_before_ear">
		<sequential>

			<!-- you can do anything before the EAR file is being packed -->

		</sequential>
	</macrodef>

    <macrodef name="cmestorefront_before_dist_copy">
        <sequential>

            <replaceregexp byline="true">
                <fileset dir="${ext.cmestorefront.path}">
                    <include name="**/*.java"/>
                    <include name="**/*.jsp"/>
                    <include name="**/*.tag"/>
                    <include name="**/*.xml"/>
                    <include name="**/*.impex"/>
                    <include name="**/*.csv"/>
                    <include name="**/*.vm"/>
                    <include name="**/*.properties"/>
                    <exclude name="**/buildcallbacks.xml"/>
                </fileset>
                <regexp pattern="(.+)TELCO_(START|END)(.+|)"/>
                <substitution expression=""/>
            </replaceregexp>
            
            <delete>
                <fileset dir="${ext.cmestorefront.path}" includes="**/*.deleted"/>
                <fileset dir="${ext.cmestorefront.path}" includes="**/leftblankintentionally.txt"/>
            </delete>
            
        </sequential>
    </macrodef>

	<macrodef name="cmestorefront_after_build">
		<sequential>
			<impexGenerate extname="cmestorefront"/>
				<containsExact separator=";" string="${extension.names}" substring="addonsupport">
					<do>
						<foreachext>
							<do>
								<for delimiter=";" list="${addon.folder}" param="addOnFile">
									<sequential>
										<if>
											<available file="${ext.@{extname}.path}/acceleratoraddon/@{addOnFile}"/>
											<then>
												<echo message="Extname test:  @{extname}"/>
												<echo message="addOnFile test:  @{addOnFile}"/>
												<copyAddOnToExtension addonextension="@{extname}" addonresource="@{addOnFile}" target="cmestorefront"/>
											</then>
										</if>
									</sequential>
								</for>
							</do>
						</foreachext>
					</do>
				</containsExact>
		</sequential>
	</macrodef>	
	
</project>
