<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="productPkResolvingStrategy" class="com.epam.cme.storefront.filters.btg.support.impl.ProductPkResolvingStrategy" >
		<property name="urlParsingStrategy" ref="productUrlParsingStrategy" />
		<property name="productService" ref="productService" />
	</bean>

	<bean id="productUrlParsingStrategy" class="com.epam.cme.storefront.filters.btg.support.impl.DefaultUrlParsingStrategy" >
		<property name="regex" value="^/.+/p/(\w+)$" />
	</bean>

	<bean id="categoryPkResolvingStrategy" class="com.epam.cme.storefront.filters.btg.support.impl.CategoryPkResolvingStrategy" >
		<property name="urlParsingStrategy" ref="categoryUrlParsingStrategy" />
		<property name="categoryService" ref="commerceCategoryService" />
	</bean>
	<bean id="categoryUrlParsingStrategy" class="com.epam.cme.storefront.filters.btg.support.impl.DefaultUrlParsingStrategy" >
		<property name="regex" value="^/.+/c/(\w+)$" />
	</bean>

	<alias name="defaultBTGSegmentStrategy" alias="btgSegmentStrategy" />
	<bean id="defaultBTGSegmentStrategy" class="com.epam.cme.storefront.filters.btg.support.impl.DefaultBTGSegmentStrategy" >
		<property name="btgEvaluationService" ref="btgEvaluationService"/>
		<property name="btgResultService" ref="btgResultService"/>
		<property name="cmsPreviewService" ref="cmsPreviewService"/>
		<property name="cmsSiteService" ref="cmsSiteService"/>
		<property name="sessionService" ref="sessionService"/>
		<property name="userService" ref="userService"/>
		<property name="evaluateAnonymousSessions" value="true"/>
	</bean>

</beans>
