<items 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			xsi:noNamespaceSchemaLocation="items.xsd">

  <relations>
        <relation code="CustomerOrganizationRelation"
                localized="false" generate="true" autocreate="true">
            <deployment table="CustomerOrgRel" typecode="10500"/>
            <sourceElement type="Customer" qualifier="customers" cardinality="many"/>
            <targetElement type="Organization" qualifier="organizations" cardinality="many"/>
        </relation>
  </relations>

  <itemtypes>
	<itemtype generate="false"
	   code="Customer"
	   autocreate="false"
   >
		<attributes>
			<attribute qualifier="status" type="java.lang.Boolean">
				<description>Account lock state</description>
				<persistence type="property"/>
			</attribute>

			<attribute qualifier="attemptCount" type="java.lang.Integer">
				<description>Login attempts counter</description>
            <persistence type="property"/>
			</attribute>

			<attribute qualifier="media" type="Media">
				<persistence type="property"/>
			</attribute>

		</attributes>
	</itemtype>
 
   <itemtype generate="true"
    code="Organization"
    jaloclass="epam.customermodelext.jalo.Organization"
    autocreate="true"
   >
     <attributes>
        <attribute qualifier="id" type="java.lang.Integer">
         <description>Identifier</description>
         <modifiers optional="false"/>
         <persistence type="property" />
        </attribute>
       
        <attribute qualifier="name" type="localized:java.lang.String">
         <description>Organization name</description>
         <modifiers optional="false"/>
         <persistence type="property" />
        </attribute>
       
        <attribute qualifier="phone" type="java.lang.String">
         <description>Phone number</description>
         <modifiers optional="false"/>
         <persistence type="property" />
        </attribute>
       
       </attributes>
   </itemtype>
  </itemtypes>
</items>
